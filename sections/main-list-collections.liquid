<!-- Main — List Collections (minimal) -->
<header class="py-5">
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-2">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Collections</li>
      </ol>
    </nav>

    <div class="d-flex flex-wrap justify-content-between align-items-end gap-3">
      <div>
        <h1 class="brand fw-black m-0">{{ section.settings.section_title }}</h1>
        <p class="text-secondary mb-0">{{ section.settings.section_subtitle }}</p>
      </div>
    </div>
  </div>
</header>

<main class="pb-5">
  <div class="container">
    <div class="row g-4" id="grid">
        {% assign filter_handles = section.settings.collection_handles | split: ',' %}

      {% for collection in collections %}
        {% if filter_handles contains collection.handle %}
          <div class="col-12 col-sm-6 col-lg-4 col-xl-3 collection">
            <a class="text-decoration-none" href="{{ collection.url }}">
              <div class="collection-card h-100">
                {% if collection.image %}
                  <img class="thumb w-100" src="{{ collection.image | image_url: width: 800 }}" alt="{{ collection.title | escape }}">
                {% else %}
                  <img class="thumb w-100" src="//placehold.co/720x480?text={{ collection.title | escape }}" alt="{{ collection.title | escape }}">
                {% endif %}
                <div class="p-3">
                  <h5 class="mb-1">{{ collection.title }}</h5>
                  <p class="small text-secondary mb-0">{{ collection.description | strip_html | truncate: 120 }}</p>
                </div>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</main>

{% schema %}
{
  "name": "Main List Collections",
  "settings": [
    {
      "id": "section_title",
      "type": "text",
      "label": "Title",
      "default": "Shop by collection"
    },
    {
      "id": "section_subtitle",
      "type": "text",
      "label": "Subtitle",
      "default": "Pick a vibe — we’ll show you the flavors that match."
    },
    {
      "id": "collection_handles",
      "type": "text",
      "label": "Collection handles (comma-separated)",
      "info": "Example: bestsellers,fruity-fresh,chocolatey,special-diet"
    }
  ],
  "presets": [
    { "name": "List Collections (CSV handles)" }
  ]
}
{% endschema %}
